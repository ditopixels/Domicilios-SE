{{>header}}

<main class="container">
    <form id="login" class="login" action="/login" method="POST">
        <h2>Inicia Sesión</h2>
        {{>input name="username" type="text" placeholder="Usuario" value=""}}
        {{>input name="password" type="password" placeholder="Contraseña" value=""}}

        <button class="button" id="getToken">Ingresar</button>
    </form>
    <img class="sign-img" src="{{host}}/images/login.svg" alt="Security with your login">
</main>

