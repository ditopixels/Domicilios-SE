
<header>
    <div class="logo">
        <img src="{{host}}/images/icon.png" alt="">
        <img src="{{host}}/images/name.png" alt="">
    </div>
    <nav>
        <div class="icono-menu" id="icono-menu">
            <img src="{{host}}/images/open-menu.png" >
        </div>
        <div class="cont-menu" id="menu">
            <ul>
                <li><a href="{{host}}/">Regresar</a></li>
            </ul>
        </div>
    </nav>
</header>


<form class="form-registro" action="/empleo" method="POST" enctype="multipart/form-data">

	<h2 >Complete el Formulario</h2>

	<div class="inputs">
		{{>input type="text" name="username" placeholder="Nombre y apellido"}}
		{{>input type="number" name="cedula" placeholder="Cédula"}}
		{{>input type="number" name="edad" placeholder="Edad"}}
		{{>input type="number" name="phone" placeholder="Teléfono"}}
		{{>input type="email" name="email" placeholder="Correo electrónico"}}
		
		<select class="selector" name="transport">
			<option>Medio de Transporte</option>
			<option>Moto</option>
			<option>Coche</option>
			<option>Bicicleta</option>
		</select>

		<div class="div-add-photo">
		
		<label class="select-image">
			<img id='imagenetq' class="image slow" src="{{host}}/images/camera.png">
			<input type="file" name="image" class="none" required="true" id="imagen">
		</label>

		</div>

	</div>

	<button class="button" type="submit">Enviar</button>

</form> 
